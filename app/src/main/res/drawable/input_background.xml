<?xml version="1.0" encoding="utf-8"?>
<!-- Background drawable for input fields:
     - 8dp rounded corners for modern look
     - neutral background color for subtle contrast
     - 1dp light gray border (#E5E7EB) for visual definition -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/neutral_background" />
    <corners android:radius="8dp" />
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" />
</shape>